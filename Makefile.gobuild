CUR_DIR = $(shell pwd)

%.statbin:
	@ ( \
		echo "Building up for $(GOARCH) arch..."; \
		GOPATH=$(CUR_DIR) go build -o $(CUR_DIR)/bin/$(NAME) $(subst .statbin,,$@) && echo "Done."; \
	);

%.compliant:
	@ ( \
		cd "$(PROJECT_ROOT)/$(subst .compliant,,$@)" >/dev/null || exit 1; \
		go fmt || exit 1; \
		GOPATH=$(CUR_DIR)/ golint || exit 1; \
		GOPATH=$(CUR_DIR)/ go vet || exit 1; \
	);

%.test:
	GOPATH=$(CUR_DIR) go test $(subst .test,,$@)

check: $(GO_TESTS)
